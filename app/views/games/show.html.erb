  <div data-role="collapsible" data-collapsed="true" data-theme="a" data-content-theme="a">
    <h4>Metadata</h4>
    <ul data-role="listview" data-inset="false">
      <li><strong>Max Players:</strong> <%= @game.max_players %></li>
    </ul>
  </div>

  <div data-role="collapsible" data-collapsed="false" data-theme="a" data-content-theme="a">
    <h4>Roles</h4>
    <ul data-role="listview" data-inset="true">
      <% @game.roles.each do |role| %>
      <li data-icon="edit">
        <%= link_to role.name, edit_role_path(role) %>
      </li>
      <% end %>
      <li data-icon="plus" data-theme="b">
        <%= link_to 'Add New Role', new_game_role_path(@game) %>
      </li>
    </ul>
  </div>


</div>
