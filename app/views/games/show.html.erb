<div data-role="header">
  <%= link_to 'Edit', edit_game_path(@game), "data-icon" => "edit", "class" => "ui-btn-right" %>
  <%= link_to 'Back', games_path, "data-icon" => "back", "class" => "ui-btn-left" %>
  <h3><%= @game.name %></h3>
  <%= render 'navbar' %>
</div>

<div data-role="content">
  <p id="notice" class="ui-bar-a ui-bar ui-corner-all" ><%= notice %></p>

  <div class="ui-grid-b">
    <div class="ui-block-a" style="text-align: center">
      <h4>Total Sessions</h4>
      <h4><%= @session_count %></h4>
    </div>
    <div class="ui-block-b" style="text-align: center">
      <h4>Stalemates</h4> 
      <h4><%= @stalemate_count %></h4>
    </div>
    <div class="ui-block-c" style="text-align: center">
      <h4>Overall Stalemate Ratio</h4> 
      <h4><%= @stalemate_ratio.round(1) %>%</h4>
    </div>
  </div>

